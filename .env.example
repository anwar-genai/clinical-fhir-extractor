# Clinical FHIR Extractor - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================
# OpenAI Configuration (Required)
# ============================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================
# Database Configuration
# ============================================================
# SQLite (default, for development)
DATABASE_URL=sqlite:///./clinical_fhir.db

# PostgreSQL (for production - uncomment and configure)
# DATABASE_URL=postgresql://user:password@localhost:5432/clinical_fhir

# ============================================================
# JWT Authentication (IMPORTANT: Change in production!)
# ============================================================
# Generate a secure secret key using: openssl rand -hex 32
# Or in Python: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# Security Settings
# ============================================================
PASSWORD_MIN_LENGTH=8
API_KEY_LENGTH=32

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=10

# ============================================================
# CORS Configuration
# ============================================================
# Comma-separated list of allowed origins
# Development (allow all):
CORS_ORIGINS=["*"]
# Production (specific domains):
# CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# ============================================================
# LangChain/Vector Store Configuration
# ============================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
VECTOR_SEARCH_K=4

# ============================================================
# Application Settings
# ============================================================
APP_NAME=Clinical FHIR Extractor
APP_VERSION=0.2.0
DEBUG=false